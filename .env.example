# Database Configuration
MONGODB_URI=mongodb://localhost:27017/smart-shop

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE_TIME=7d

# Node Environment
NODE_ENV=development

# Email Service Configuration (Choose one)
# For Gmail (requires App Password)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Smart Shop <noreply@smartshop.com>

# For development testing (Ethereal Email)
ETHEREAL_EMAIL=ethereal.user@ethereal.email
ETHEREAL_PASSWORD=ethereal.pass

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=5000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
